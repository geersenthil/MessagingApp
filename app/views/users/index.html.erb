
<h1>Users</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.firstname %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to "Give #{user.firstname} Feedback", new_message_path(:message =>{:recipient_id => user.id})%></td>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
